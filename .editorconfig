# EditorConfig - https://editorconfig.org
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_size = 2
trim_trailing_whitespace = false

# YAML files
[*.{yaml,yml}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# PowerShell scripts
[*.ps1]
indent_size = 4

# JSON files
[*.json]
indent_size = 2

# Python files - per python-style-guide.md
[*.py]
indent_size = 4
max_line_length = 100
